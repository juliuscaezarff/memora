{
  "name": "server",
  "type": "module",
  "main": "src/index.ts",
  "scripts": {
    "build": "tsdown",
    "check-types": "tsc -b",
    "compile": "bun build --compile --minify --sourcemap --bytecode ./src/index.ts --outfile server",
    "dev": "bun run --hot src/index.ts",
    "start": "bun run dist/index.js"
  },
  "dependencies": {
    "@hono/node-server": "^1.13.8",
    "hono": "catalog:",
    "@orpc/server": "catalog:",
    "@orpc/openapi": "catalog:",
    "@orpc/zod": "catalog:",
    "better-auth": "catalog:",
    "dotenv": "catalog:",
    "zod": "catalog:",
    "@memora/env": "workspace:*",
    "@memora/api": "workspace:*",
    "@memora/auth": "workspace:*",
    "@memora/db": "workspace:*"
  },
  "devDependencies": {
    "@types/bun": "catalog:",
    "@vercel/node": "^5.0.2",
    "typescript": "catalog:",
    "tsdown": "^0.16.5",
    "@memora/config": "workspace:*"
  }
}
